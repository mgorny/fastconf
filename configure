#!/bin/sh

PN=fastconf
PV=0.0.1

conf_init() {
	fc_inherit patch
}

conf_arg_parse() {
	false
}

conf_get_targets() {
	fc_export MODULEDIR '$(DATADIR)'/${PN}

	fc_sed ${PN}.sh ${PN}.sh.out \
		'/^FC_MODULE_PATH/s:=.*$$:=$(MODULEDIR):'

	# Don't make it executable, it is not expected to be so
	fc_install_as '$(BINDIR)' ${PN}.sh.out ${PN}.sh
	fc_install '$(MODULEDIR)' modules/*.sh
}

. ./fastconf.sh
